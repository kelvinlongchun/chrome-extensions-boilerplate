{
	"manifest_version": 3,
	"name": "Chrome Extensions Boilerplate",
	"description": "A boilerplate of Chrome Extensions",
	"version": "1.0.0",
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [],
	"action": {
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "js/background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/content-scripts.js"],
			"type": "module"
		}
	]
}
